<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:id="gridPane" fx:controller="com.example.calc_u_later.CalculatorController" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10" styleClass="calculator">

    <TextField fx:id="resultField" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4" promptText="Enter a number" editable="false" maxWidth="130" styleClass="result-field" />

    <Button text="1" onAction="#handleButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="number-button" />
    <Button text="2" onAction="#handleButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="number-button" />
    <Button text="3" onAction="#handleButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="number-button" />
    <Button text="+" onAction="#handleButtonClick" GridPane.columnIndex="3" GridPane.rowIndex="1" styleClass="operation-button"/>

    <Button text="4" onAction="#handleButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="number-button" />
    <Button text="5" onAction="#handleButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="number-button" />
    <Button text="6" onAction="#handleButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="number-button" />
    <Button text="-" onAction="#handleButtonClick" GridPane.columnIndex="3" GridPane.rowIndex="2" styleClass="operation-button"/>

    <Button text="7" onAction="#handleButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="number-button" />
    <Button text="8" onAction="#handleButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="number-button" />
    <Button text="9" onAction="#handleButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="number-button" />
    <Button text="*" onAction="#handleButtonClick" GridPane.columnIndex="3" GridPane.rowIndex="3" styleClass="operation-button"/>

    <Button text="0" onAction="#handleButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="number-button"/>
    <Button text="." onAction="#handleButtonClick" GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="number-button"/>
    <Button text="=" onAction="#handleButtonClick" GridPane.columnIndex="2" GridPane.rowIndex="4" styleClass="equals-button"/>
    <Button text="/" onAction="#handleButtonClick" GridPane.columnIndex="3" GridPane.rowIndex="4" styleClass="operation-button"/>

    <Button text="C" onAction="#handleButtonClick" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="clear-button"/>

</GridPane>
